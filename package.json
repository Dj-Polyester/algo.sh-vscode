{
  "name": "algo-sh",
  "displayName": "algo.sh",
  "description": "",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.54.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:algo-sh.helloWorld",
    "onView:algo-sh-sidebar"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "algo.sh",
        "properties": {
          "algo-sh.load": {
            "type": "number",
            "default": 2,
            "description": "Specifies how many code blocks to load in a page"
          },
          "algo-sh.comments": {
            "type": "boolean",
            "default": true,
            "description": "Specifies whether or not to have comments in code texts"
          }
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "algo-sh-sidebar-view",
          "title": "algo.sh",
          "icon": "./media/algo.png"
        }
      ]
    },
    "views": {
      "algo-sh-sidebar-view": [
        {
          "type": "webview",
          "id": "algo-sh-sidebar",
          "name": "algo.sh",
          "icon": "./media/algo.png",
          "contextualTitle": "algo.sh"
        }
      ]
    },
    "commands": [
      {
        "command": "algo-sh.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.54.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0",
    "webpack": "^5.19.0",
    "webpack-cli": "^4.4.0"
  }
}
